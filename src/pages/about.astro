---
import Layout from '../layouts/BlogPost.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<style>
  /* ... (your existing styles for .centered-heading, .image-wrapper, .content-section) ... */

  .four-boxes-container {
    display: grid; /* Enables CSS Grid layout */
    grid-template-columns: repeat(2, 1fr); /* Creates 2 columns, each taking equal fraction of space */
    gap: 20px; /* Space between grid items (boxes) */
    max-width: 900px; /* Max width for the whole 2x2 grid, adjust as needed */
    margin: 4rem auto; /* Centers the entire grid container horizontally */
    padding: 1rem; /* Padding inside the container */
  }

  .box {
    background-color: #fff; /* White background for each box */
    border: 1px solid #eee; /* Light gray border */
    border-radius: 8px; /* Rounded corners for the boxes */
    padding: 1.5rem; /* Padding inside each box */
    text-align: center; /* Centers image and text horizontally within each box */
    box-shadow: 0 4px 8px rgba(0,0,0,0.05); /* Subtle shadow for depth */
    display: flex; /* Use flexbox to vertically align content if desired */
    flex-direction: column; /* Stack image and text vertically */
    justify-content: space-between; /* Pushes content to top/bottom */
  }

  .box img {
    max-width: 100%; /* Ensures image doesn't overflow its box */
    height: auto; /* Maintains aspect ratio */
    border-radius: 4px; /* Slightly rounded corners for images */
    margin-bottom: 1rem; /* Space between image and text */
  }

  .box p {
    font-size: 1rem;
    color: #333;
    margin: 0; /* Remove default paragraph margin */
  }

  /* Responsive adjustment for smaller screens: stack boxes vertically */
  @media (max-width: 768px) {
    .four-boxes-container {
      grid-template-columns: 1fr; /* On small screens, make it a single column */
      max-width: 500px; /* Adjust max-width for single column */
    }
  }
</style>

<section class="four-boxes-container">
  <div class="box">
    <img src="/public/IMG_1955.jpeg" alt="Event Lighting 1">
    <p>Dynamic Lighting Setup for events.</p>
  </div>
  <div class="box">
    <img src="/public/blog-placeholder-1.jpg" alt="Stage Setup">
    <p>Professional stage and audio visual services.</p>
  </div>
  <div class="box">
    <img src="/public/blog-placeholder-2.jpg" alt="DJ Booth">
    <p>Custom DJ booth designs and rentals.</p>
  </div>
  <div class="box">
    <img src="/public/blog-placeholder-3.jpg" alt="Party Atmosphere">
    <p>Creating unforgettable party atmospheres.</p>
  </div>
</section>