---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<style>
  /* Page-specific styles for index.astro */

  .centered-heading {
    text-align: center;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .image-wrapper {
    max-width: 1200px; /* Keep your desired image width */
    width: 90%;      /* Keep it responsive up to max-width */
    margin: 0 auto;  /* Keep centering the image block */
    padding: 1rem;
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  /* --- MODIFIED FOR WIDER TEXT LAYOUT --- */
 /* --- MODIFIED FOR WIDER TEXT LAYOUT --- */
  .content-section {
    /* We need to counteract any parent's max-width or margin: auto */
    width: 100%; /* Make it fill its parent */
    /* If the parent (`<main>`) has a max-width, this will still be limited.
       To break out, we need to apply more specific or viewport-based widths. */

    /* Try this for a good wide, but not edge-to-edge, layout: */
    max-width: 1200px; /* Make it wider than default content, adjust as needed */
    margin: 3rem auto; /* Center this wider block */
    padding: 0 2rem;   /* Ensure there's padding from the screen edges */

    line-height: 1.6;
    text-align: left; /* Keep text left-aligned for readability */
  }

  /* Optional: Basic spacing for paragraphs and lists within the content section */
  .content-section p {
      margin-bottom: 1em;
  }
  .content-section ul {
      margin-left: 20px;
  }
</style>


<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
